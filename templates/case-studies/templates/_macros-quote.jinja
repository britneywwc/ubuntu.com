# Params
# quote: Quote text (required)
# name: Name of quoter (required)
# job_title: Job title of quoter (required)

{%- macro quote(quote, name, job_title) -%}
  <section class="p-strip">
    <div class="row">
      <div class="col-start-large-4 col-9">
        <hr />
        <div class="row">
          <div class="col-6">
            <blockquote class="p-pull-quote case-studies-quote">
              <p class="p-pull-quote__quote case-studies-quote"><i>{{ quote }}</i></p>
            </blockquote>
          </div>
          <div class="col-3">
            <p>
              <br class="u-hide--large" />
              <strong>{{ name }}</strong><br />
              <span class="u-text--muted">{{ job_title }}</span>
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>
{%- endmacro -%}
