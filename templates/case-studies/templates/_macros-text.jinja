# Params
# title: Title of text section (required)
# description_list: Description of text section, each list item is a paragraph (required)

{%- macro text(title, description_list) -%}
  <section class="p-strip">
    <div class="row">
      <div class="col-start-large-4 col-9">
        <hr class="p-rule"/>
        <h2 class="p-strip is-shallow">{{ title }}</h2>
        <p>
          {% for desc in description_list %}
            {{ desc }}{% if not loop.last %}<br/><br/>{% endif %}
          {% endfor %}
      </p>
      </div>
    </div>
  </section>
{%- endmacro -%}
